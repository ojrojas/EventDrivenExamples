    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web) - (Rest1)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Rest1/bin/Debug/net6.0/Rest1.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Rest1",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "enableStepFiltering": false
        },
        {
            "name": ".NET Core Launch (web) - (Rest2)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Rest2/bin/Debug/net6.0/Rest2.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Rest2",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "enableStepFiltering": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}